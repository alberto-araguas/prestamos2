<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewUsuarioId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8FA3EA"
            android:backgroundTint="?android:attr/textColorHighlightInverse"
            android:text="id_Usuario"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5B6EF"
            android:text="Nombre"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/viewDireccionUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5B6EF"
            android:text="Direccion"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/viewTelefonoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5B6EF"
            android:text="Telefono"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/viewCorreoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5B6EF"
            android:text="Correo"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/viewDepartamientoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5B6EF"
            android:text="Departamento"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>