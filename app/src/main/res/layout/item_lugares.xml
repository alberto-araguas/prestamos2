<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/viewLugarId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FB9C10"
            android:backgroundTint="?android:attr/textColorHighlightInverse"
            android:text="id_Lugar"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewNombreLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEFE2"
            android:text="NombreLugar"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/viewDireccionLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEFE2"
            android:text="DireccionLugar"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/viewTelefonoLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEFE2"
            android:text="TelefonoLugar"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/viewCorreoLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEEFE2"
            android:text="CorreoLugar"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>